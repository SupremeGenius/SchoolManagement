<Window x:Class="SchoolManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolManagement"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="850">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel>
                <DockPanel>
                    <Menu DockPanel.Dock="Top">
                        <MenuItem Header="Tool">
                            <MenuItem Header="Registration"></MenuItem>
                            <MenuItem Header="About"></MenuItem>
                        </MenuItem>
                        <MenuItem Header="Option"></MenuItem>
                    </Menu>
                </DockPanel>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Label 
                FontSize="30"
                HorizontalContentAlignment="Center" 
                VerticalContentAlignment="Center">
                APP
            </Label>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="3"></ColumnDefinition>
                <ColumnDefinition Width="6*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <GroupBox 
                    Header="Account list" 
                    FontSize="16">
                    <DataGrid FontSize="12">
                        <DataGrid.Columns>
                            <DataGridTextColumn 
                                        Header="ID"
                                        Width="Auto"
                                        ></DataGridTextColumn>
                            <DataGridTextColumn 
                                        Header="Name"
                                        Width="Auto"></DataGridTextColumn>
                            <DataGridTextColumn 
                                        Header="Data"
                                        Width="*"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
            </Grid>
            <GridSplitter 
                Grid.Column="1" 
                HorizontalAlignment="Stretch"
                Background="Transparent"
                ></GridSplitter>
            <Grid Grid.Column="2">
                <GroupBox 
                    Header="Data" 
                    FontSize="16">
                    <TabControl FontSize="12">
                        <TabItem Header="Info">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <Grid Margin="0,5,0,5" Name="profile_image">
                                        <StackPanel>
                                            <Viewbox MaxHeight="250">
                                                <!--<Image 
                                                    Width="{Binding ActualWidth, ElementName=profile_image}"
                                                    Height="{Binding ActualHeight, ElementName=profile_image}"
                                                    Source="pack://siteoforigin:,,,/Resources/PPN.jpg"/>-->
                                            </Viewbox>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Column="1" Background="#FFEAD0">
                                    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                                  VerticalScrollBarVisibility="Auto">
                                        <Grid Height="Auto">
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>
                                                <RowDefinition Height="50"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <StackPanel 
                                                Grid.Row="0"
                                                Orientation="Vertical">
                                                <StackPanel>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="90"></ColumnDefinition>
                                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid Grid.Column="0">
                                                            <Label Content="ID:"></Label>
                                                        </Grid>
                                                        <Grid Grid.Column="1">
                                                            <TextBox
                                                                Margin="5 0"
                                                                VerticalAlignment="Center"
                                                                TextAlignment="Left"
                                                                Text="1"></TextBox>
                                                        </Grid>
                                                    </Grid>
                                                </StackPanel>
                                                <StackPanel>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="90"></ColumnDefinition>
                                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid Grid.Column="0">
                                                            <Label Content="Tên phụ huynh:"></Label>
                                                        </Grid>
                                                        <Grid Grid.Column="1">
                                                            <TextBox
                                                                Margin="5 0"
                                                                VerticalAlignment="Center"
                                                                TextAlignment="Left"
                                                                Text="Phạm Phước Nguyên"></TextBox>
                                                        </Grid>
                                                    </Grid>
                                                </StackPanel>
                                                <StackPanel>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="90"></ColumnDefinition>
                                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid Grid.Column="0">
                                                            <Label Content="Giới tính:"></Label>
                                                        </Grid>
                                                        <Grid Grid.Column="1">
                                                            <StackPanel 
                                                                VerticalAlignment="Center"
                                                                HorizontalAlignment="Left">
                                                                <StackPanel Orientation="Horizontal">
                                                                    <CheckBox 
                                                                        IsChecked="True"
                                                                        VerticalAlignment="Center"></CheckBox>
                                                                    <Label Content="Male"></Label>
                                                                </StackPanel>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Grid>
                                                </StackPanel>
                                                <StackPanel>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="90"></ColumnDefinition>
                                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid Grid.Column="0">
                                                            <Label Content="Ngày sinh:"></Label>
                                                        </Grid>
                                                        <Grid Grid.Column="1">
                                                            <TextBox
                                                                Margin="5 0"
                                                                VerticalAlignment="Center"
                                                                TextAlignment="Left"
                                                                Text="dd/MM/yyyy"></TextBox>
                                                        </Grid>
                                                    </Grid>
                                                </StackPanel>
                                                <StackPanel>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="90"></ColumnDefinition>
                                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid Grid.Column="0">
                                                            <Label Content="Tên học sinh:"></Label>
                                                        </Grid>
                                                        <Grid Grid.Column="1">
                                                            <TextBox
                                                                Margin="5 0"
                                                                VerticalAlignment="Center"
                                                                TextAlignment="Left"
                                                                Text=""></TextBox>
                                                        </Grid>
                                                    </Grid>
                                                </StackPanel>
                                                <StackPanel>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="90"></ColumnDefinition>
                                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid Grid.Column="0">
                                                            <Label Content="Email:"></Label>
                                                        </Grid>
                                                        <Grid Grid.Column="1">
                                                            <TextBox
                                                                Margin="5 0"
                                                                VerticalAlignment="Center"
                                                                TextAlignment="Left"
                                                                Text="nguyen.pham@seldatinc.com"></TextBox>
                                                        </Grid>
                                                    </Grid>
                                                </StackPanel>
                                                <StackPanel>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="90"></ColumnDefinition>
                                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid Grid.Column="0">
                                                            <Label Content="Địa chỉ:"></Label>
                                                        </Grid>
                                                        <Grid Grid.Column="1">
                                                            <TextBox
                                                                Margin="5 0"
                                                                VerticalAlignment="Center"
                                                                TextAlignment="Left"
                                                                Text="17/2 Bình Lợi"></TextBox>
                                                        </Grid>
                                                    </Grid>
                                                </StackPanel>
                                            </StackPanel>
                                            <Grid Grid.Row="1">
                                                <StackPanel 
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Orientation="Horizontal">
                                                    <Button 
                                                        Margin="5 0"
                                                        Height="20"
                                                        Width="70"
                                                        Content="Edit"></Button>
                                                    <Button 
                                                        Margin="5 0"
                                                        Height="20"
                                                        Width="70"
                                                        Content="Delete"></Button>
                                                    <Button 
                                                        Margin="5 0"
                                                        Height="20"
                                                        Width="70"
                                                        Content="Report"></Button>
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </ScrollViewer>
                                </Grid>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Statistic">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="70"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition></ColumnDefinition>
                                            <ColumnDefinition Width="100"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0">
                                            <StackPanel Orientation="Vertical">
                                                <StackPanel Orientation="Horizontal">
                                                    <StackPanel 
                                                        Margin="0 2"
                                                        Orientation="Horizontal">
                                                        <Label Content="Date "></Label>
                                                        <DatePicker></DatePicker>
                                                    </StackPanel>
                                                </StackPanel>
                                            </StackPanel>
                                            
                                        </Grid>
                                        <Grid Grid.Column="1">
                                            <StackPanel>
                                                <Button
                                                    Width="70"
                                                    Height="20"
                                                    Margin="0 5"
                                                    Content="Search"
                                                    ></Button>
                                                <Button
                                                    Width="70"
                                                    Height="20"
                                                    Margin="0 5"
                                                    Content="Export"
                                                    ></Button>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                    
                                </Grid>
                                <Grid Grid.Row="1">
                                    <DataGrid>
                                        <DataGrid.Columns>
                                            <DataGridTextColumn 
                                                Header="Id"
                                                Width="*"
                                                ></DataGridTextColumn>
                                            <DataGridTextColumn 
                                                Header="Name"
                                                Width="*"
                                                ></DataGridTextColumn>
                                            <DataGridTextColumn 
                                                Header="Data"
                                                Width="*"
                                                ></DataGridTextColumn>
                                            <DataGridTextColumn 
                                                Header="Date"
                                                Width="*"
                                                ></DataGridTextColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </Grid>
                            
                        </TabItem>
                    </TabControl>
                </GroupBox>
            </Grid>
        </Grid>
        <Grid Grid.Row="3">
            <StackPanel 
                Orientation="Horizontal"
                VerticalAlignment="Center"
                HorizontalAlignment="Right">
                <Button
                    Name="registration"
                    Margin="15 0"
                    Width="70"
                    Height="23"
                    Click="Registration_Click">Registration</Button>
                <Button
                    Name="import"
                    Margin="15 0"
                    Width="70"
                    Height="23"
                    Click="Import_Click">Import</Button>
                <Button
                    Name="cancel"
                    Margin="15 0"
                    Width="70"
                    Height="23"
                    Click="Cancel_Click">Cancel</Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="4">
            <DockPanel>
                <StatusBar DockPanel.Dock="Bottom">
                    <StatusBarItem>
                        <Grid>
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <Label  Content="Server Status"></Label>
                                <Grid>
                                    <Canvas Width="17" 
                                            Margin="0 6"
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Center">
                                        <Ellipse
                                            Fill="Green"
                                            Height="15"
                                            Width="15"></Ellipse>
                                    </Canvas>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </StatusBarItem>
                    <Separator></Separator>
                    <StatusBarItem></StatusBarItem>
                </StatusBar>
            </DockPanel>
        </Grid>
    </Grid>
</Window>
